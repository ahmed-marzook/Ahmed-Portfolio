---
import "../styles/global.css";

const pageTitle = "About Ahmed";

const identity = {
  firstName: "Ahmed",
  country: "Canada",
  occupation: "Software Engineer",
  hobbies: ["cycling", "cooking", "learning new frameworks"],
};

const skills = [
  "TypeScript",
  "React",
  "Astro",
  "Node.js",
  "Cloud Architecture",
  "Technical Writing",
];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "crimson";
const fontWeight = "bold";
const textCase = "uppercase";

const hobbiesText = identity.hobbies.length
  ? identity.hobbies.length === 1
    ? identity.hobbies[0]
    : `${identity.hobbies.slice(0, -1).join(", ")}, and ${
        identity.hobbies[identity.hobbies.length - 1]
      }`
  : "exploring new hobbies";

const skillStyles = `color: ${skillColor}; font-weight: ${fontWeight}; text-transform: ${textCase};`;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>
  </head>
  <body>
    <h1>{pageTitle}</h1>
    <p>
      Hello! I'm {identity.firstName}, a {identity.occupation} based in
      {identity.country}. I love spending my spare time {hobbiesText} while also
      exploring new ways to build thoughtful user experiences.
    </p>

    <section>
      <h2>Skills I lean on every day</h2>
      <ul>
        {skills.map(skill => (
          <li style={skillStyles}>{skill}</li>
        ))}
      </ul>
    </section>

    <section>
      <h2>Current goals</h2>
      <p>
        I'm currently focused on completing {goal} major initiatives that blend
        platform reliability with delightful developer tooling.
      </p>
      <p>
        {happy
          ? "Building and mentoring bring me a ton of joy."
          : "I'm working on finding more joy in day-to-day coding."}
      </p>
      <p>
        {finished
          ? "Each project I plan is wrapped up nicely."
          : "There's always another challenge to solveâ€”and I'm energized by that."}
      </p>
    </section>
  </body>
</html>
